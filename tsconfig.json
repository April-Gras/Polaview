{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "paths": {
      "~/*": [
        "./shared/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./server/*"
      ]
    },
    "sourceMap": true,
    "moduleResolution": "Node",
    "jsx": "preserve",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true
  },
}