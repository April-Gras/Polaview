{
  "compilerOptions": {
    "paths": {
      "client/*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}